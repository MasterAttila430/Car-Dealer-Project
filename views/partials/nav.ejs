<nav style="background: rgb(240, 240, 240); padding: 10px; margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
    <div>
        <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
            <span>Szia, <strong><%= currentUser %></strong>!</span>
        <% } else { %>
            <span>Vendég</span>
        <% } %>
    </div>
    <div>
        <a href="/" style="margin-right: 15px; font-weight: bold; text-decoration: none; color: #333;">Főoldal</a>
        
        <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
            <form action="/logout" method="POST" style="display:inline;">
                <button type="submit" style="color: red; cursor: pointer; border: none; background: none; font-size: 1em; text-decoration: underline;">Kijelentkezés</button>
            </form>
        <% } else { %>
            <a href="/login" style="margin-right: 15px;">Belépés</a>
            <a href="/register" style="font-weight: bold;">Regisztráció</a>
        <% } %>
    </div>
</nav>